<% var transparent = false; %>
<% include partials/nav_aahvaan %>
<div class="card text-center" style="margin-top: 5rem;">
	<div class="card-header">
		<h2>Fill in the form below</h2>
    <% if(alert){ %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Wrong credentials!!!</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% alert = false %>
<% } %>
	</div>
    <div class="card-body" style="margin-left: 5rem; margin-right: 5rem;">
       <form action="/campus_ambassador" method="POST">
          <div class="form-group">
    		<input type="text" class="form-control" name="ca_name" placeholder="Name" required="true">
    	  </div>
         <div class="form-group">
        <input type="tel" class="form-control" name="ca_number" placeholder="Contact Number(Eg. 8743080047)" required="true" minlength="10" maxlength="10">
        </div>
         <div class="form-group">
        <input type="email" class="form-control" name="ca_email" placeholder="Email" required="true">
        </div>
         <div class="form-group">
        <input type="text" class="form-control" name="ca_college" placeholder="College Name" required="true">
        </div>
        <div class="form-group">
        <input type="text" class="form-control" name="ca_year" placeholder="Year of study" required="true">
        </div>
        <div class="form-group">
        <input type="text" class="form-control" name="ca_area" placeholder="Area of study" required="true">
        </div>
        <div class="form-group">
        <textarea class="form-control" rows = "3" name="ca_why" placeholder="Why you want to be a campus ambassador?" required="true"></textarea>
        </div>
  		  <button type="submit" class="btn btn-primary">Submit</button>
  		</form>
    </div>
</div>

<% include partials/footer %>