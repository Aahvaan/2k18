<% var transparent = false; %>
<% include partials/nav_aahvaan %>
<div class="card" style="margin-top: 5rem;">
	<div class="card-header text-center">
		<h2><%= sports_name %>&nbspTeam Information</h2>
    <% if(alert){ %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Wrong phone number!!!</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% alert = false %>
<% } %>
	</div>
    <div class="card-body" style="margin-left: 5rem; margin-right: 5rem;">
       <form action="/register_sports" method="POST" id="register_sports">
        <input type="hidden" name="sports_name" value='<%= sports_name %>'>
          <div class="form-group">
    		<input type="text" class="form-control" name="captain_name" placeholder="Enter Team Captain Name" required="true">
    	  </div>
    	<div class="form-group">
        <input type="tel" class="form-control" name="captain_number" placeholder="Captains Contact Number(Eg. 8743080047)" required="true" minlength="10" maxlength="10">
        </div>
        <div class="form-group">
          <input type="number" id="players" name = "number_of_players" class="form-control" placeholder="Enter number of players in the team">
        </div>
        <div class="team-players"></div>
        <div class="text-center form-group">
        <button type="submit" class="btn btn-primary col-md-4 text-center">Submit</button>
      </div>
  		</form>
    </div>
</div>