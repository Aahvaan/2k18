<% include partials/header %>
<div class="card" style="margin-top: 5rem;">
	<div class="card-header text-center">
		<h2>Team Information</h2>
    <% if(alert){ %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Wrong credentials!!!</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% alert = false %>
<% } %>
	</div>
    <div class="card-body" style="margin-left: 5rem; margin-right: 5rem;">
       <form action="/register_sports" method="POST">
          <div class="form-group">
    		<input type="text" class="form-control" name="captain_name" placeholder="Enter team captain name" required="true">
    	  </div>
    	  <div class="form-group">
    		<input type="number" class="form-control" name="captain_number" placeholder=" Enter Captains Number" required="true">
  		  </div>
        <% for(var i=0;i<number_of_players){ %>
          <div class="form-group">
        <input type="text" class="form-control" name="player_name#" placeholder="Enter name" required="true">
        </div>
  		</form>
    </div>
</div>

<% include partials/footer %>